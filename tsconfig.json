{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"],
      "types/*": ["./types/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules"]
}
